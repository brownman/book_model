<table>
  <tr>
    <th>Title</th>
 
    <th>User</th>
  </tr>
  <% for book in @books %>
    <tr>
      <td><%= book.title %></td>

      <td><%= book.user_id %></td>
      <td><%= link_to "Show", book_path( :user_id => @user.id , :id => book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book , :user_id => @user.id) %></td>
      <td><%= link_to "Destroy", book_path(:user_id => @user.id , :id => book.id), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

